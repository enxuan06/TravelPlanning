@page "/users"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using TravelPlanning.Domain
@using TravelPlanning.Data
@implements IAsyncDisposable
@inject IDbContextFactory<TravelPlanning.Data.TravelPlanningContext> DbFactory

<PageTitle>Index</PageTitle>

<QuickGrid Class=" table table-striped table-bordered" Items="context.User">
    <PropertyColumn Property="user => user.UserName" />
    <PropertyColumn Property="user => user.EmailAddress" />
    <PropertyColumn Property="user => user.DateCreated" />
    <PropertyColumn Property="user => user.DataUpdated" />
    <PropertyColumn Property="user => user.CreatedBy" />
    <PropertyColumn Property="user => user.UpdatedBy" />

    <TemplateColumn Context="user">
        <a href="@($"users/edit?id={user.Id}")">Edit</a> 
        <a href="@($"users/details?id={user.Id}")">Details</a> 
        <a href="@($"users/delete?id={user.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

<p>
    <a href="users/create" class="btn btn-primary">+ New User</a>
</p>
@code {
    private TravelPlanningContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
